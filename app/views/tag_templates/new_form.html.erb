<!-- Validation failure messages -->
<% if @tag.present? %>
  <% if @tag.errors.any? %>
    <% @tag.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new tag
</h1>

<hr>

<form action="/create_tag" method="post">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @tag.try(:name) %>">
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @tag.try(:description) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create tag
  </button>
</form>

<hr>

<a href="/tags">
  Go back
</a>
