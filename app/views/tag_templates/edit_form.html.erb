<!-- Validation failure messages -->
<% if @tag.errors.any? %>
  <% @tag.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit tag #<%= @tag.id %>
</h1>

<hr>

<form action="/update_tag/<%= @tag.id %>" method="post">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @tag.name %>">
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @tag.description %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update tag
  </button>
</form>

<hr>

<a href="/tags">
  Go back
</a>
