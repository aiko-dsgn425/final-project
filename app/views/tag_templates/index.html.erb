<h1>
  All tags
</h1>

<a href="/tags/new">
  Add a new tag
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Description
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @tags.each do |tag| %>
  <tr>
    <td>
      <%= tag.id %>
    </td>

    <td>
      <%= tag.name %>
    </td>

    <td>
      <%= tag.description %>
    </td>

    <td>
      <%= time_ago_in_words(tag.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(tag.updated_at) %> ago
    </td>

    <td>
      <a href="/tags/<%= tag.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
