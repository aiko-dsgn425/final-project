<h1>
  All portfolio allocations
</h1>

<a href="/portfolio_allocations/new">
  Add a new portfolio allocation
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Portfolio
    </th>

    <th>
      Ticker
    </th>

    <th>
      Percent allocated
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @portfolio_allocations.each do |portfolio_allocation| %>
  <tr>
    <td>
      <%= portfolio_allocation.id %>
    </td>

    <td>
      <%= portfolio_allocation.portfolio_id %>
    </td>

    <td>
      <%= portfolio_allocation.ticker_id %>
    </td>

    <td>
      <%= portfolio_allocation.percent_allocated %>
    </td>

    <td>
      <%= time_ago_in_words(portfolio_allocation.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(portfolio_allocation.updated_at) %> ago
    </td>

    <td>
      <a href="/portfolio_allocations/<%= portfolio_allocation.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
