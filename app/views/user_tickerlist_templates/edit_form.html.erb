<!-- Validation failure messages -->
<% if @user_tickerlist.errors.any? %>
  <% @user_tickerlist.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit user tickerlist #<%= @user_tickerlist.id %>
</h1>

<hr>

<form action="/update_user_tickerlist/<%= @user_tickerlist.id %>" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @user_tickerlist.user_id %>">
  </div>

  <!-- Label and input for ticker_id -->
  <div class="form-group">
    <label for="ticker_id">
      Ticker
    </label>

    <input type="text" id="ticker_id" name="ticker_id" class="form-control" value="<%= @user_tickerlist.ticker_id %>">
  </div>

  <!-- Label and input for tag_id -->
  <div class="form-group">
    <label for="tag_id">
      Tag
    </label>

    <input type="text" id="tag_id" name="tag_id" class="form-control" value="<%= @user_tickerlist.tag_id %>">
  </div>

  <!-- Label and input for watchlist -->
  <div class="form-check">
    <input type="hidden" value="0" name="watchlist">
    <input id="watchlist" class="form-check-input" name="watchlist" type="checkbox" value="1" <%= "checked" if @user_tickerlist.watchlist %>>

    <label for="watchlist" class="form-check-label">
      Watchlist
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update user tickerlist
  </button>
</form>

<hr>

<a href="/user_tickerlists">
  Go back
</a>
